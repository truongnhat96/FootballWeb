@model List<Advertisement>

<h2>Quảng cáo</h2>

@foreach (var ad in Model)
{
    <div class="card mb-3">
        <img src="@ad.ImagePath" class="card-img-top" alt="Ad image" />
        <div class="card-body">
            <h5>@ad.Title</h5>
            <p>@ad.Description</p>
            <p><strong>Liên hệ:</strong> @ad.ContactEmail</p>
        </div>
    </div>
}
