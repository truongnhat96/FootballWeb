﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/sbadmin/css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        @await RenderSectionAsync("SideBar", false)
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                @await RenderSectionAsync("TopBar", false)
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    &copy; 2025 - FootballWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/sbadmin/js/sb-admin-2.min.js"></script>

    <script>
        $(function() {
          const collapseIds = ['#collapseUserManage', '#collapsePhanquyen'];

          // A) Khởi tạo trạng thái từ localStorage
          collapseIds.forEach(selector => {
            const state = localStorage.getItem(selector);
            if (state === 'show') {
              $(selector).collapse('show');
            } else if (state === 'hide') {
              $(selector).collapse('hide');
            }
          });

          // B) Click handler: đóng panel khác, toggle panel đích
          $('.nav-link[data-toggle="collapse"]').on('click', function(e) {
            e.preventDefault();
            const targetSel = $(this).attr('data-target');
            // Đóng hết
            $('.collapse').not(targetSel).collapse('hide');
            // Mở/đóng chính nó
            $(targetSel).collapse('toggle');
          });

          // C) Lắng nghe để lưu trạng thái
          collapseIds.forEach(selector => {
            $(selector).on('shown.bs.collapse', () => {
              localStorage.setItem(selector, 'show');
            });
            $(selector).on('hidden.bs.collapse', () => {
              localStorage.setItem(selector, 'hide');
            });
          });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>