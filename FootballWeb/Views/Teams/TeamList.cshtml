@using FootballWeb.Repository
@model List<Team>
@{
    ViewData["Title"] = "Team List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Football Teams</h1>
        <a asp-action="Edit" asp-route-id="0" class="btn btn-primary">Thêm đội bóng</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            Không tìm thấy đội bóng nào trong hệ thống. Hãy thêm đội bóng.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Team Name</th>
                        <th>Short Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in Model)
                    {
                        <tr>
                            <td>@team.Id</td>
                            <td>@team.Name</td>
                            <td>@team.ShortName</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-info btn-sm">Edit</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
